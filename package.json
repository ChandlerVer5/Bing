{
  "name": "MyBing",
  "version": "0.4.0",
  "productName": "MyBing",
  "description": "Extendable electron-based open-source Spotlight and Alfred analogue",
  "author": "YoFoon",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "main": "./webpack/main.dev.js",
  "scripts": {
    "test": "npm run lint-render && npm run lint-main",
    "lint-render": "eslint src *.js",
    "lint-main": "eslint main *.js",
    "lint": "eslint 'src/**/*.{js,jsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,css,scss}'",
    "clear": "rm -rf ./app/* && rm -rf ./dist/* && cp ./src/main/package.json ./app/",
    "start": "cross-env NODE_ENV=development webpack-dev-server --hot --config=./webpack/webpack.dev.config.js",
    "start-electron": "npm run build-preload && cross-env NODE_ENV=development nodemon -e js --watch ./src/main --watch ./src/utools --watch ./src/common --exec electron .",
    "build-preload": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.preload.config.js --progress --profile --colors",
    "build-main": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.electron.config.js --progress --profile --colors",
    "pack": "build --dir",
    "compile": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.pro.config.js",
    "electron": "cross-env NODE_ENV=production electron app/main.js",
    "build": "npm run clear && npm run compile && npm run electron",
    "package": "npm run build && npm run pack",
    "mac": "npm run build && electron-builder --mac --x64",
    "win": "npm run build && electron-builder --win --x64 --ia32",
    "linux": "npm run build && electron-builder --linux",
    "builder": "npm run build &&  electron-builder --mac --x64 && electron-builder --win --x64 --ia32"
  },
  "build": {
    "appId": "com.chandlerver5.www",
    "productName": "MyBing",
    "directories": {
      "output": "dist"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "category": "photo",
      "icon": "./build/icon.icns",
      "artifactName": "${productName}_mac_${arch}_${version}.${ext}",
      "target": [
        "dmg"
      ],
      "publish": [
        {
          "provider": "generic",
          "url": ""
        }
      ]
    },
    "win": {
      "icon": "./build/icon.ico",
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}_win_${arch}_${version}.${ext}",
      "publish": [
        {
          "provider": "generic",
          "url": ""
        }
      ]
    },
    "linux": {
      "icon": "./build/icons",
      "artifactName": "${productName}_linux_${arch}_${version}.${ext}"
    },
    "nsis": {
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "oneClick": false
    },
    "extraFiles": [
      "dll"
    ]
  },
  "pre-commit": [
    "test"
  ],
  "dependencies": {
    "asar-require-auto": "^1.2.4",
    "auto-launch": "^5.0.5",
    "cerebro-tools": "file:../cerebro/cerebro-tools",
    "core-js": "^3.6.5",
    "drag-drop": "^6.0.2",
    "escape-string-regexp": "^4.0.0",
    "lodash": "^4.17.19",
    "mv": "^2.1.1",
    "nodemon": "^2.0.4",
    "prop-types": "^15.7.2",
    "rc-virtual-list": "^1.1.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-fontawesome": "^1.7.1",
    "react-markdown": "^4.3.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.2.0",
    "react-select": "^3.1.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "rmdir": "^1.2.0",
    "semver": "^7.3.2",
    "tar-fs": "^2.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/register": "^7.10.5",
    "autoprefixer": "^9.8.5",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-webpack-alias": "^2.1.2",
    "copy-webpack-plugin": "^6.0.3",
    "cross-env": "^7.0.2",
    "css-loader": "^4.0.0",
    "electron": "^9.1.1",
    "electron-builder": "^22.7.0",
    "electron-updater": "^4.3.1",
    "eslint": "^7.5.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-argreion": "gist:86724154ca49ee8b3f9aebae3fe44e0a",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "lodash-webpack-plugin": "^0.11.5",
    "node-sass": "^4.14.1",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "regenerator-runtime": "^0.13.7",
    "sass-loader": "^9.0.2",
    "source-map-loader": "^1.0.1",
    "style-loader": "^1.2.1",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
